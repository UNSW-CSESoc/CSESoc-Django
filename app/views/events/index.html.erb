<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Location</th>
    <th>Registration required</th>
    <th>Registration email</th>
    <th>Volunteers required</th>
    <th>Volunteers email</th>
    <th>Description</th>
    <th>Publish date</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.time %></td>
    <td><%= event.location %></td>
    <td><%= event.registration_required %></td>
    <td><%= event.registration_email %></td>
    <td><%= event.volunteers_required %></td>
    <td><%= event.volunteers_email %></td>
    <td><%= event.description %></td>
    <td><%= event.publish_date %></td>
    <td><%= event.author %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

