
<h1>
  <%= @suggestion.subject %>
</h1>
<h2>
  <%= @suggestion.user.cse_username %>
</h2>

<p>
  <%= RDiscount.new(@suggestion.message).to_html.html_safe %>
</p>

<h2>
  Comments
</h2>

<% @suggestion.comments.each do |comment| %>
  <%= render comment %>
<% end %>

<%= form_for [@suggestion, @suggestion.comments.new], :remote => true do |f| %>
  <div id="comment_errors">
  </div>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', suggestions_path %>
